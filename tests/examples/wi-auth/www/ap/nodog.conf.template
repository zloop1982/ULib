COMMENT2 LOG_FILE_SZ 5M
    LOG_MSG_SIZE -1
    PLUGIN "nocat http"
    REQ_TIMEOUT 5
    CGI_TIMEOUT 60
    TCP_LINGER_DEF
    PREFORK_CHILD_DEF
    LISTEN_BACKLOG_DEF
