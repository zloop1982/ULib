    FW_CMD ../firewall/nodog.fw
    DECRYPT_KEY vivalatopa
    CHECK_EXPIRE_INTERVAL_DEF
    CHECK_TYPE_DEF
    FW_ENV_DEF
    LOCAL_NETWORK_LABEL_DEF
    NUM_PEERS_PREALLOCATE_DEF
COMMENT3 DHCP_DATA_FILE /tmp/kea-leases.tdb
}
